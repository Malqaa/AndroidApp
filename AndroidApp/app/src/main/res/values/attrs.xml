<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToggleSwitchOptions">
        <attr name="toggleWidth" format="dimension" />

        <attr name="textToggleCenter" format="string" localization="suggested" />
        <attr name="textToggleLeft" format="string" localization="suggested" />
        <attr name="textToggleRight" format="string" localization="suggested" />

        <attr name="activeBgColor" format="color" />
        <attr name="activeTextColor" format="color" />
        <attr name="inactiveBgColor" format="color" />
        <attr name="inactiveTextColor" format="color" />
        <attr name="separatorColor" format="color" />

        <attr name="cornerRadius" format="dimension" />

        <attr name="android:textSize" />
    </declare-styleable>
    <declare-styleable name="DetailedTextField">
        <attr name="enableTopLine" format="boolean" />
        <attr name="enableBottomLine" format="boolean" />
        <attr name="enableDescription" format="boolean" />
        <attr name="textDescription" format="string" />

        <attr name="startIcon" format="reference" />
        <attr name="endIcon" format="reference" />
        <attr name="enablePasswordToggle" format="boolean" />

        <attr name="android:hint" />
        <attr name="android:inputType" />
        <attr name="android:maxLength" />
        <attr name="android:text" />
        <attr name="android:backgroundTint" />
        <attr name="android:digits" />
        <attr name="lastfield" format="boolean" />
        <attr name="viewType">
            <enum name="edittext" value="0" />
            <enum name="spinner" value="1" />
            <enum name="phone" value="2" />
            <enum name="text" value="3" />
            <enum name="edittext2" value="4" />
        </attr>


    </declare-styleable>

    <declare-styleable name="CustomRadioButton">


        <attr name="android:checked" />
        <attr name="android:text" />


    </declare-styleable>
    <declare-styleable name="TermsnConditionsSwitch">


        <attr name="android:checked" />
        <attr name="textSwitch" format="string" />
        <attr name="textLink" format="string" />

    </declare-styleable>

    <declare-styleable name="AutoScrollViewPager">
        <attr name="slideInterval" format="integer" />
        <attr name="slideDirection" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="stopWhenTouch" format="boolean" />
        <attr name="cycle" format="boolean" />
        <attr name="slideDuration" format="integer" />
    </declare-styleable>
</resources>