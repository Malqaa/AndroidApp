<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="1dp" />
                    <stroke
                        android:width="3dp"
                        android:color="@color/GreenApp" />
                    <gradient
                        android:startColor="#ffffff"
                        android:centerColor="#ffffff"
                        android:endColor="#ffffff"
                        android:angle="270" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>

            <item
                android:width="6dp"
                android:height="3dp"
                android:top="10.8dp"
                android:left="4dp">
                <rotate
                    android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/GreenApp"/>
                    </shape>
                </rotate>
            </item>

            <item
                android:width="11dp"
                android:height="3dp"
                android:top="8.9dp"
                android:left="5.8dp">
                <rotate
                    android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/GreenApp"/>
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>