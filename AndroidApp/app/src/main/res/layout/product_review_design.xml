<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/review_profile_pic"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/profile_pic"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/review_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text="22/7/2021"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#6D6C74"
                    android:layout_marginStart="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/review_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_bold"
                    android:text="Mohamed ahmed"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="#262626"
                    android:layout_marginStart="@dimen/_5sdp"/>
                <TextView
                    android:id="@+id/review_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_light"
                    android:text="Very good and fast delivery"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#6D6C74"
                    android:layout_marginStart="@dimen/_5sdp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">


                <LinearLayout
                    android:layout_width="@dimen/_62sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="end"
                    android:background="@drawable/rate_ic_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/review_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:fontFamily="@font/madani_arabic_light"
                        android:gravity="center"
                        android:text="4.7"
                        android:textColor="#000000"
                        android:textSize="@dimen/_14sdp" />


                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/smile" />


                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@color/light_gray">

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>