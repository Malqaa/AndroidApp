<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutSelectedPaymentOptions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@drawable/product_attribute_bg_linebg"
    android:orientation="vertical"
    android:visibility="gone">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/product_attribute_bg4"
        android:backgroundTint="#F8F8F8"
        android:padding="16dp">

        <!-- card holders name title -->
        <TextView
            android:id="@+id/textCardHoldersNameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/madani_arabic_medium"
            android:text="@string/card_holders_name"
            android:textColor="#293241"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- card holders name -->
        <TextView
            android:id="@+id/textCardHoldersName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#8B959E"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@+id/textCardHoldersNameTitle"
            app:layout_constraintTop_toBottomOf="@+id/textCardHoldersNameTitle"
            tools:text="Abdelaziz Dawoud" />

        <!-- card number title-->
        <TextView
            android:id="@+id/textCardNumberTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/madani_arabic_medium"
            android:text="@string/card_number"
            android:textColor="#293241"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="@+id/textCardHoldersName"
            app:layout_constraintTop_toBottomOf="@+id/textCardHoldersName" />

        <!-- card holders name -->
        <TextView
            android:id="@+id/textCardNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#8B959E"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@+id/textCardNumberTitle"
            app:layout_constraintTop_toBottomOf="@+id/textCardNumberTitle"
            tools:text="XXXX 4641 5656 8954" />

        <!-- expiry date title -->
        <TextView
            android:id="@+id/textExpiryDateTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/madani_arabic_medium"
            android:text="@string/expiry_date"
            android:textColor="#293241"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintBottom_toBottomOf="@+id/textCardNumberTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textCardNumberTitle"
            app:layout_constraintTop_toBottomOf="@+id/textCardHoldersName" />

        <!-- expiry date title -->
        <TextView
            android:id="@+id/textExpiryDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#8B959E"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="@+id/textExpiryDateTitle"
            app:layout_constraintTop_toBottomOf="@+id/textExpiryDateTitle"
            tools:text="2/25" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/btnChooseAnotherCard"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/product_attribute_bg4"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center_vertical"
            android:text="@string/choose_another_card"
            android:textColor="#293241"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>
</LinearLayout>
