<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signin"
    tools:context=".activities_main.login.SignupOptionsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="30dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="180dp"
                android:layout_height="81dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/malqaa_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/btn_signup_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="150dp"
                android:backgroundTint="@color/GoldenApp"
                android:onClick="confirmInput"
                android:padding="12dp"
                android:text="@string/RegisterasPersonalUser"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageView8" />

            <Button
                android:id="@+id/btn_signup_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/GreenApp"
                android:onClick="confirmInput"
                android:padding="12dp"
                android:text="@string/RegisterasBussinessUser"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@id/btn_signup_normal" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

