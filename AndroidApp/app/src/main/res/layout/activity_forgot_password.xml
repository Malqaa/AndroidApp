<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities_main.forgot.forgot_password.ForgotPasswordActivty">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="15dp"
                android:layout_height="17dp"
                android:layout_gravity="start"

                android:background="@drawable/ic_back"
                android:rotation="@string/mirror_degree" />

            <com.malka.androidappp.helper.widgets.language_switch.ToggleSwitch
                android:id="@+id/language_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/tab_bg"
                android:textSize="@dimen/_12sdp"
                app:activeBgColor="@color/bg"
                app:activeTextColor="@android:color/white"
                app:cornerRadius="@dimen/_15sdp"
                app:inactiveBgColor="@color/tab_bg"
                app:inactiveTextColor="@android:color/black"
                app:separatorColor="@color/gray_very_light"
                app:textToggleLeft="EN"
                app:textToggleRight="AR"
                app:toggleWidth="@dimen/_50sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/main_logo" />

            <TextView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/madani_arabic_bold"
                android:text="@string/Forgot_your_password"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/imageView88"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/madani_arabic_light"
                android:text="Enter your email and we'll send password reset instructions"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Enter_your_Email"
                android:inputType="textEmailAddress"
                app:startIcon="@drawable/ic_email" />

            <androidx.appcompat.widget.AppCompatButton

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:onClick="forgotpassconfrm"
                android:text="@string/Sendinstructions"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text="@string/already_have_an_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text="Sign In"
                    android:textColor="@color/bg"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>



</RelativeLayout>

