<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullview"
    android:layout_width="@dimen/_95sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_margin="5dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:id="@+id/category_icon"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/main_logo"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/shape_border"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:src="@drawable/main_logo"
                android:visibility="gone"
                app:civ_border_color="@color/orange"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:sriv_border_width="2dip"
                app:sriv_left_bottom_corner_radius="@dimen/_15sdp"
                app:sriv_left_top_corner_radius="@dimen/_15sdp"
                app:sriv_oval="false"
                app:sriv_right_bottom_corner_radius="@dimen/_15sdp"
                app:sriv_right_top_corner_radius="@dimen/_15sdp" />

            <TextView
                android:id="@+id/category_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/madani_arabic_light"
                android:text="Vehicles"
                android:textColor="#1D223B"
                android:textSize="@dimen/_9sdp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/category_icon"
                app:layout_constraintTop_toTopOf="@+id/category_icon" />

            <LinearLayout
                android:id="@+id/bgline"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/product_attribute_linebg"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- <ImageView
                 android:scaleType="fitXY"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:src="@drawable/dummy_cat" />-->
        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>


    <LinearLayout

        android:id="@+id/is_selectimage"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:src="@drawable/ic_check" />

    </LinearLayout>


</RelativeLayout>


