<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_5sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:visibility="gone"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/star_shine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_8sdp"
            android:layout_height="wrap_content">

            <TextView
                android:drawableStart="@drawable/star_shine"
                android:id="@+id/pkg_service1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="5dp"
                android:textAlignment="viewStart"
                android:fontFamily="@font/madani_arabic_medium"
                android:text="@string/your_product_will_be_displayed_on_the_home_page"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:text=" : "
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/value_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:fontFamily="@font/madani_arabic_medium"
                android:textColor="@color/grey"
                android:textSize="@dimen/_10sdp" />
            <ImageView
                android:id="@+id/imgCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>