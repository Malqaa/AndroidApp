<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <ImageView
            android:id="@+id/close_alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cross" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/bid_confirmation"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/bidding_completed_successfully"
            android:textSize="@dimen/_14sdp"
            android:textColor="#293241"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_light"
                android:gravity="center"
                android:text="@string/bid_value"
                android:textSize="@dimen/_10sdp"
                android:textColor="#8B959E"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_medium"
                android:gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="1643 S.R"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/bg"/>

        </LinearLayout>





        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/manage_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/round_btn"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:text="@string/manage_your_bid"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"/>



        <TextView
            android:id="@+id/back_to_shopping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/back_to_shopping"
            android:textSize="@dimen/_12sdp"
            android:textColor="#45495E"/>
    </LinearLayout>


</RelativeLayout>