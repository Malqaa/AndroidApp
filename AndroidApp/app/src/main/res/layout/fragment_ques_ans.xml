<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quesans_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <include
        android:id="@+id/toolbar_quesans"
        layout="@layout/toolbar_main" />




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quesAns_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/askques_bottom"
        android:layout_below="@+id/toolbar_quesans" />

<RelativeLayout
    android:id="@+id/askques_bottom"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/SilverBackground">

    <EditText
        android:id="@+id/editTextques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/imageView39"
        android:background="@color/white"
        android:hint="@string/AskaQuestion"
        android:padding="10dp"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_baseline_send_24" />

</RelativeLayout>


</RelativeLayout>