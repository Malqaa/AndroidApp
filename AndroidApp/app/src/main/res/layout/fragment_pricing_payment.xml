<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".botmnav_fragments.create_ads.PricingPayment">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnnn"
        android:layout_below="@+id/toolbar_main">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/addbank_rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/add_bank_layout" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/listing_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="@string/sale_type"
                            android:textColor="#293241"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="*"
                            android:textColor="@color/Red"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/fix_Price_l"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/fixed_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/madani_arabic_light"
                            android:text="@string/fixed_price_sale"
                            android:textColor="#45495E"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/listingtyp_rb1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:isScrollContainer="false" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/auction_option"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/Auction_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/madani_arabic_light"
                            android:text="@string/Auction"
                            android:textColor="#45495E"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/listingtyp_rb2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/Tender_l"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/Tender_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/madani_arabic_light"
                            android:text="@string/tender"
                            android:textColor="#45495E"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/listingtyp_rb3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/textview_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="@string/purchasing_price_"
                            android:textColor="#293241"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="*"
                            android:textColor="@color/Red"
                            android:textSize="@dimen/_13sdp" />

                    </LinearLayout>


                    <RelativeLayout
                        android:id="@+id/Buy_now_l"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:id="@+id/buynowprice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_toLeftOf="@+id/buynowprice_price"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:textSize="@dimen/_10sdp"
                            android:maxLength="10" />

                        <LinearLayout
                            android:id="@+id/buynowprice_price"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/edittext_bg"
                            android:backgroundTint="@color/gray_2"
                            android:gravity="center">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/madani_arabic_light"
                                android:text="@string/rial"
                                android:textColor="@color/bg"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/auction_opt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/madani_arabic_light"
                        android:text="@string/auction_options"
                        android:textColor="#293241"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/Auction_price"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="@string/auction_start_price"
                            android:textColor="#293241"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="*"
                            android:textColor="@color/Red"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>



                    <RelativeLayout
                        android:id="@+id/Buy_Auctino_l"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:id="@+id/startprice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_toLeftOf="@+id/startprice_price"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_10sdp"
                            android:inputType="number"
                            android:maxLength="10" />

                        <LinearLayout
                            android:id="@+id/startprice_price"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/edittext_bg"
                            android:backgroundTint="@color/gray_2"
                            android:gravity="center">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/madani_arabic_light"
                                android:text="@string/rial"
                                android:textColor="@color/bg"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </RelativeLayout>



                    <LinearLayout
                        android:id="@+id/textview_minimum_p"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="@string/minimum_price"
                            android:textColor="#293241"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="*"
                            android:textColor="@color/Red"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/minimum_price_l"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:id="@+id/reserveprice"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_toLeftOf="@+id/reserveprice_price"
                            android:background="@null"
                            android:textSize="@dimen/_10sdp"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:maxLength="10" />

                        <LinearLayout
                            android:id="@+id/reserveprice_price"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/edittext_bg"
                            android:backgroundTint="@color/gray_2"
                            android:gravity="center">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/madani_arabic_light"
                                android:text="@string/rial"
                                android:textColor="@color/bg"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/chooseOption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="@string/payment_options"
                            android:textColor="#293241"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="*"
                            android:textColor="@color/Red"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>


                    <LinearLayout

                        android:id="@+id/saudi_bank_auction"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:gravity="center_vertical"
                            android:text="@string/saudi_bank_deposit"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_10sdp" />


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swicth_saudi_bank_deposit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/saudi_bank_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/product_attribute_bg_linebg"
                        android:orientation="vertical"
                      >


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/madani_arabic_light"
                                android:text="@string/saudi_bank_deposit"
                                android:textColor="@color/bg"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/saudi_bank_deposit_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="1"
                                android:checked="true" />
                        </LinearLayout>







                        <LinearLayout
                            android:id="@+id/add_a_new_account"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@drawable/product_attribute_bg4"
                            android:gravity="center"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/madani_arabic_medium"
                                android:gravity="center_vertical"
                                android:text="@string/add_a_new_account"
                                android:textColor="#293241"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_visa_mastercard"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edittext_bg"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_20sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:gravity="center_vertical"
                            android:text="@string/visa_mastercard"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/_10sdp" />


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swicth_visa_mastercard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_weight="1" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/error_payment_radionbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="27dp"
                android:textColor="#FF0000"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bank" />


        </LinearLayout>
    </ScrollView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnnn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/madani_arabic_semi_bold"
        android:text="@string/add_product"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/_14sdp" />

    <include
        android:visibility="gone"
        android:id="@+id/loader"
        layout="@layout/loader_layout" />

</RelativeLayout>