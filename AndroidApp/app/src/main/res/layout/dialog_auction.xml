<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="30dp"
    android:background="@drawable/corner_background"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    android:paddingBottom="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/close_alert_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/delete_x_rounded" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:text="@string/participate_in_the_auction"
            android:textColor="#293241"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_light"
                android:gravity="center"
                android:text="@string/bid_start_price"
                android:textColor="#8B959E"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/tvBidStartPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/madani_arabic_medium"
                android:gravity="center"
                android:text="@string/Rayal"
                android:textColor="@color/bg"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_bg">


            <LinearLayout
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_corener_from_start_light_orange"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_semi_bold"
                    android:text="+"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_22sdp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/light_gray">

            </LinearLayout>

            <EditText
                android:id="@+id/etCountNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:maxLength="3"
                android:text="1"
                android:textColor="@color/textColor" />


            <LinearLayout
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/light_gray">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnSubtract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/background_corener_from_end_light_orange"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_semi_bold"
                    android:text="-"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_22sdp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_light"
                android:text="@string/activate_automatic_bidding"
                android:textColor="#8B959E"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchAutoBid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerAutomaticBidding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_light"
                android:text="@string/increaseForEachTime"
                android:textColor="#293241"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_bg">

                <EditText
                    android:id="@+id/etIncreaseForEachTIme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toStartOf="@id/conatinerRayal"
                    android:background="@android:color/transparent"
                    android:hint="@string/writeIncreaseForEachTime"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:id="@+id/conatinerRayal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background_corener_from_end_light_orange"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/cairo_regular"
                        android:text="@string/Rayal"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/madani_arabic_light"
                android:text="@string/highestBidPrice"
                android:textColor="#293241"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/circle_bg">

                <EditText
                    android:id="@+id/etHighestBidPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_toStartOf="@id/conatinerRayal2"
                    android:background="@android:color/transparent"
                    android:hint="@string/writeHighestBidPrice"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:id="@+id/conatinerRayal2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background_corener_from_end_light_orange"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/cairo_regular"
                        android:text="@string/Rayal"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_bid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/round_btn_grey"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:text="BID"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp" />
    </LinearLayout>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar"
        android:visibility="gone"
        />


</RelativeLayout>
