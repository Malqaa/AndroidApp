<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_curve_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/btnApplyFilter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/applyFilter"
                android:foreground="?android:attr/selectableItemBackground"
                android:textColor="@color/bg"
                android:fontFamily="@font/madani_arabic_light"
                android:textSize="@dimen/_12sdp"
                android:gravity="start"
                />

            <TextView
                android:id="@+id/btnFilter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Filter"
                android:gravity="center"
                android:textColor="@color/black"
                android:fontFamily="@font/madani_arabic_medium"
                android:textSize="@dimen/_12sdp"
                />


            <TextView
                android:id="@+id/btnResetFilter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/reset"
                android:textColor="@color/bg"
                android:gravity="end"
                android:foreground="?android:attr/selectableItemBackground"
                android:fontFamily="@font/madani_arabic_light"
                android:textSize="@dimen/_12sdp"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/progressBar"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_sub_category"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_region"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_specification"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_medium"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:id="@+id/containerPriceSpecification">

          <TextView
              android:id="@+id/tvPrice"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_10sdp"
              android:layout_marginBottom="@dimen/_10sdp"
              android:text="@string/Price"
              android:layout_marginTop="20dp"
              android:textSize="@dimen/_10sdp"
              android:textColor="@color/gray"
              />
          <com.google.android.material.slider.RangeSlider
              android:layout_width="wrap_content"
              android:layout_height="10dp"
              android:valueFrom="0"
              android:valueTo="20000"
              android:id="@+id/rangePrice"
              app:labelBehavior="withinBounds"
              app:values="@array/initial_slider_values"
              />

      </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/edittext_bg">

        <TextView
            android:id="@+id/btnSubCategory"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sub_categories"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:layout_margin="@dimen/_12sdp"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:textColor="#000000"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>



        <TextView
            android:id="@+id/btnRegion"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/region"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:layout_margin="@dimen/_12sdp"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:textColor="#000000"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/light_gray"/>


        <TextView
            android:id="@+id/btnSpecification"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/specifications"
            android:gravity="center"
            android:layout_margin="@dimen/_12sdp"
            android:textSize="@dimen/_10sdp"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:textColor="#000000"/>

    </LinearLayout>
</LinearLayout>