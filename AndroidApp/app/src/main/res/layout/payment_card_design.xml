<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="@dimen/_180sdp"
        android:layout_height="@dimen/_250sdp"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp"
        android:background="@drawable/payment_card_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/visa_ic"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end">

                <ImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:src="@drawable/edit_btn"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/card_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1234456895634"
            android:fontFamily="@font/madani_arabic_light"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_12sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="bottom">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Card"
                android:fontFamily="@font/madani_arabic_light"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:id="@+id/card_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muhammad Ahmed"
                android:fontFamily="@font/madani_arabic_light"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"/>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ExpiryDate"
                android:fontFamily="@font/madani_arabic_light"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"/>




            <TextView
                android:id="@+id/expiry_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22/01"
                android:fontFamily="@font/madani_arabic_light"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>