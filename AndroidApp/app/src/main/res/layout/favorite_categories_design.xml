<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:background="@drawable/product_attribute_bg4"
        >


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <LinearLayout
                android:layout_width="@dimen/_42sdp"
                android:layout_height="@dimen/_42sdp"
                android:background="@drawable/circle_ic_background"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:gravity="center"
                    android:src="@drawable/notification_log" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Hyundai - Cars"
                android:fontFamily="@font/madani_arabic_bold"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/categorypic" />

        </LinearLayout>




    </LinearLayout>

</RelativeLayout>