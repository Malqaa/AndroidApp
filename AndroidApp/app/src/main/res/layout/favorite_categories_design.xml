<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/product_attribute_bg4">


    <View
        android:id="@+id/linFollowCategory"
        android:layout_width="@dimen/_42sdp"
        android:layout_height="@dimen/_42sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/circle_ic_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:gravity="center"
        android:src="@drawable/notification"
        app:layout_constraintBottom_toBottomOf="@+id/linFollowCategory"
        app:layout_constraintEnd_toEndOf="@+id/linFollowCategory"
        app:layout_constraintStart_toStartOf="@+id/linFollowCategory"
        app:layout_constraintTop_toTopOf="@id/linFollowCategory" />


    <TextView
        android:id="@+id/category_name_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:fontFamily="@font/madani_arabic_bold"
        android:gravity="center"
        android:text="Hyundai - Cars"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/linFollowCategory"
        app:layout_constraintStart_toEndOf="@+id/category_img"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/category_img"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/categorypic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>