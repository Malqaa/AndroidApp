<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".botmnav_fragments.activities_main.business_signup.BusinessSignupPg1">

    <ScrollView
        android:id="@+id/scroll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <ImageButton
                android:id="@+id/b_signuppg_1"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:background="@drawable/ic_back"
                android:rotation="@string/mirror_degree" />

            <com.malka.androidappp.helper.widgets.language_switch.ToggleSwitch
                android:id="@+id/language_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/tab_bg"
                android:textSize="@dimen/_12sdp"
                app:activeBgColor="@color/bg"
                app:activeTextColor="@android:color/white"
                app:cornerRadius="@dimen/_15sdp"
                app:inactiveBgColor="@color/tab_bg"
                app:inactiveTextColor="@android:color/black"
                app:separatorColor="@color/gray_very_light"
                app:textToggleLeft="EN"
                app:textToggleRight="AR"
                app:toggleWidth="@dimen/_50sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/main_logo" />




            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/madani_arabic_bold"
                android:text="@string/welcome_back"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/madani_arabic_light"
                android:text="@string/new_registration"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/userNamee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:hint="@string/Username"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_user" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/textEmaill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Email"
                android:inputType="textEmailAddress"
                app:startIcon="@drawable/ic_email" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/textPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Password"
                android:inputType="textPassword"
                app:enablePasswordToggle="true"
                app:startIcon="@drawable/symbolpass" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/confirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Confirm_Password"
                android:inputType="textPassword"
                app:enablePasswordToggle="true"
                app:startIcon="@drawable/symbolpass" />


            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/invitation_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/invitation_code"
                android:inputType="text"
                app:lastfield="true"

                app:startIcon="@drawable/ic_invitation" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/business_signup1_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:text="@string/new_registration"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text="@string/already_have_an_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/new_registration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text="@string/login"
                    android:textColor="@color/bg"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


    <include
        android:id="@+id/loader"
        layout="@layout/loader"
        android:visibility="gone" />


</RelativeLayout>