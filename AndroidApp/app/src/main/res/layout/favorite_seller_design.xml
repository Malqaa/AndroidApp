<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/product_attribute_bg4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imgSeller"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@drawable/profiledp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/madani_arabic_medium"
                        android:text="Ahmed Mohamed"
                        android:textColor="#000000"
                        android:textSize="@dimen/_14sdp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/round_btn"
                        android:fontFamily="@font/madani_arabic_semi_bold"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/txtMerchant"
                        android:text="@string/merchant"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_5sdp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/madani_arabic_extra_light"
                        android:text="@string/Membersince"
                        android:textColor="#000000"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/madani_arabic_extra_light"
                        android:text=" - "
                        android:textColor="#000000"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/txt_date_since"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:fontFamily="@font/madani_arabic_extra_light"
                        android:text="21/12/2022"
                        android:textColor="#000000"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>


                <TextView
                    android:id="@+id/txtCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/madani_arabic_extra_light"
                    android:text="@string/Riyadh"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/madani_arabic_extra_light"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="@dimen/_10sdp" />



            </LinearLayout>

            <LinearLayout
                android:id="@+id/linFollow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/circle_ic_background"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imgFollow"
                        android:layout_width="@dimen/_15sdp"
                        android:layout_height="@dimen/_15sdp"
                        android:gravity="center"
                        android:src="@drawable/notification_log" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp">


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_toStartOf="@+id/containerRateSeller"
                android:scrollbarAlwaysDrawHorizontalTrack="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp">

                    <ImageView
                        android:id="@+id/skype_btn"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_gravity="center_vertical"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/skype_log" />

                    <ImageView
                        android:id="@+id/youtube_btn"
                        android:layout_width="@dimen/_34sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/youtube_log" />

                    <ImageView
                        android:id="@+id/instagram_btn"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/instagram_log" />

                    <ImageView
                        android:id="@+id/facebook_btn"
                        android:layout_width="@dimen/_23sdp"
                        android:visibility="gone"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/facebook" />

                    <ImageView
                        android:id="@+id/twitter_btn"
                        android:layout_width="@dimen/_23sdp"
                        android:visibility="gone"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/twitter" />

                    <ImageView
                        android:id="@+id/linked_in_btn"
                        android:layout_width="@dimen/_23sdp"
                        android:visibility="gone"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/linkedin" />

                    <ImageView
                        android:id="@+id/snapChat_btn"
                        android:layout_width="@dimen/_23sdp"
                        android:visibility="gone"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/snap_chat" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/tiktok_btn"
                        android:layout_width="@dimen/_23sdp"
                        android:layout_height="@dimen/_23sdp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/tiktok" />
                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:id="@+id/containerRateSeller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:layout_width="@dimen/_66sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_gravity="end|center_vertical"
                    android:background="@drawable/rate_ic_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!--                                    <TextView-->
                    <!--                                        android:id="@+id/tvRateText"-->
                    <!--                                        android:layout_width="wrap_content"-->
                    <!--                                        android:layout_height="wrap_content"-->
                    <!--                                        android:layout_gravity="center_vertical"-->
                    <!--                                        android:layout_marginEnd="@dimen/_5sdp"-->
                    <!--                                        android:fontFamily="@font/madani_arabic_light"-->
                    <!--                                        android:gravity="center"-->
                    <!--                                        android:text=""-->
                    <!--                                        android:textColor="#000000"-->
                    <!--                                        android:textSize="@dimen/_14sdp" />-->


                    <ImageView
                        android:id="@+id/ivRateSeller"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/happyface_color" />


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/edittext_bg"
            android:padding="@dimen/_10sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/following" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>