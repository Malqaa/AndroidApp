<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".design.Switch_Account">


    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />



    <LinearLayout
        android:layout_below="@+id/toolbar_main"
        android:layout_above="@+id/add_business_account_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_medium"
                android:textColor="#000000"
                android:textSize="@dimen/_14sdp"
                android:text="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_medium"
                android:textColor="#000000"
                android:layout_marginStart="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:text="@string/accounts"/>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:id="@+id/review_profile_pic"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/profile_pic"
                    android:layout_gravity="center_vertical"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">


                    <TextView
                        android:id="@+id/review_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/madani_arabic_light"
                        android:text="@string/user_account"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="#6D6C74"
                        android:layout_marginStart="@dimen/_5sdp"/>


                    <TextView
                        android:id="@+id/review_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/madani_arabic_bold"
                        android:text="Mohamed ahmed"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="#262626"
                        android:layout_marginStart="@dimen/_5sdp"/>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">


                    <LinearLayout
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/rate_ic_background"
                        android:gravity="center"
                        android:backgroundTint="@color/light_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/review_rating"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/madani_arabic_light"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/Current"
                            android:textColor="@color/bg"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@color/light_gray">

            </LinearLayout>


        </LinearLayout>





        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/business_rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="1"
            tools:listitem="@layout/switch_account_design"/>


    </LinearLayout>




    <RelativeLayout
        android:id="@+id/add_business_account_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_46sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/round_btn_grey">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Upgrade my existing account to a merchant account"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>