<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".botmnav_fragments.activities_main.business_signup.BusinessSignupPg2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <ImageButton
                android:id="@+id/busi_signup2_btn"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:background="@drawable/ic_back"
                android:rotation="@string/mirror_degree" />

            <com.malka.androidappp.helper.widgets.language_switch.ToggleSwitch
                android:id="@+id/language_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/tab_bg"
                android:textSize="@dimen/_12sdp"
                app:activeBgColor="@color/bg"
                app:activeTextColor="@android:color/white"
                app:cornerRadius="@dimen/_15sdp"
                app:inactiveBgColor="@color/tab_bg"
                app:inactiveTextColor="@android:color/black"
                app:separatorColor="@color/gray_very_light"
                app:textToggleLeft="EN"
                app:textToggleRight="AR"
                app:toggleWidth="@dimen/_50sdp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/main_logo" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/madani_arabic_bold"
                android:text="@string/CompanyData"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/madani_arabic_light"
                android:text="@string/please_enter_company_information"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/userNamee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:hint="@string/the_company_s_name"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_user" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/website"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_website" />


            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Facebook"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_facebook" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/Instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Instagram"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_instagram" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_youtube_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_bg"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/ic_youtube" />

                <ImageView
                    android:id="@+id/ic_twitter_select"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:background="@drawable/circle_bg"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/ic_twitter" />
            </LinearLayout>

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/ic_youtube"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/youtube"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_youtube" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/ic_twitter"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Twitter"
                android:inputType="textWebEmailAddress"
                app:startIcon="@drawable/ic_twitter" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField


                android:id="@+id/ic_office_building"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/type_of_employment"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_office_building" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField


                android:id="@+id/commercial_registration_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/commercial_registration_no"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_office_building" />

            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/expiry_date"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_calendar"
                app:viewType="spinner" />
            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/TaxNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/TaxNumber"
                android:inputType="textPersonName"
                app:lastfield="true"
                app:startIcon="@drawable/ic_tax" />


            <com.malka.androidappp.helper.widgets.edittext.DetailedTextField
                android:id="@+id/locating_the_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/locating_the_company"
                app:endIcon="@drawable/ic_map_content"
                app:startIcon="@drawable/ic_region"
                app:viewType="text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/download_the_commercial_registry_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_btn_ligh"
                android:fontFamily="@font/madani_arabic_medium"
                android:text="@string/download_the_commercial_registry_file"
                android:textAllCaps="false"
                android:textColor="@color/bg"
                android:textSize="@dimen/_12sdp" />


            <EditText
                android:id="@+id/busi_signup2_edittext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/buttonradius"
                android:hint="@string/ActualAddress"
                android:inputType="textEmailSubject"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/busi_signup2_tx3" />

            <EditText
                android:id="@+id/busi_signup2_edittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/buttonradius"
                android:hint="@string/BillingAddress"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/busi_signup2_edittext1" />

            <TextView
                android:id="@+id/phoneLabel2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:text="@string/BusinessPhoneNumber"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/busi_signup2_edittext2" />

            <LinearLayout
                android:id="@+id/linearlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"

                android:background="#f2f2f2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phoneLabel2">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/cppfield2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#f2f2f2"
                    android:gravity="center"
                    app:ccpDialog_allowSearch="false"
                    app:ccp_customMasterCountries="BH,KW,OM,SA,AE"
                    app:ccp_defaultNameCode="SA"
                    app:ccp_showNameCode="true"
                    app:ccp_textSize="16sp" />

                <EditText
                    android:id="@+id/busi_signup2_edittext3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/buttonradius"
                    android:hint="0000 0000"
                    android:inputType="phone"
                    android:padding="12dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/countryLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="15dp"
                android:text="@string/Country"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearlayout2" />

            <com.hbb20.CountryCodePicker
                android:id="@+id/busi_signup2_edittext4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/buttonradius"
                android:drawablePadding="8dp"
                android:padding="7dp"
                android:paddingEnd="16dp"
                app:ccpDialog_allowSearch="false"
                app:ccp_customMasterCountries="BH,KW,OM,SA,AE"
                app:ccp_defaultNameCode="SA"
                app:ccp_showFullName="true"
                app:ccp_showNameCode="false"
                app:ccp_showPhoneCode="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/countryLabel" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/busi_signup2_inputedittext5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/white"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/busi_signup2_edittext4"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/busi_signup2_inputedittext5b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:hint="@string/Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/busi_signup2_inputedittext6"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/white"
                app:boxBackgroundColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/busi_signup2_inputedittext5"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/busi_signup2_inputedittext6b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:hint="@string/Confirm_Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/business_signup2_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:text="@string/NEXT"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>