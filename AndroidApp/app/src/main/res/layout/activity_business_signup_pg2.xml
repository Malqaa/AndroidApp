<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".botmnav_fragments.activities_main.business_signup.BusinessAccountCreate">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">


            <ImageButton
                android:id="@+id/busi_signup2_btn"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"

                android:background="@drawable/ic_back"
                android:rotation="@string/mirror_degree"
                tools:ignore="SpeakableTextPresentCheck" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/main_logo" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/madani_arabic_bold"
                android:text="@string/CompanyData"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/madani_arabic_light"
                android:text="@string/please_enter_company_information"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />
            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/userNamee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:hint="@string/Username"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_user" />


            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/busi_signup2_edittext1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/the_company_s_name"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_user" />
            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/textEmaill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Email"
                android:inputType="textEmailAddress"
                app:startIcon="@drawable/ic_email" />
            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/busi_signup3_edittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/website"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_website" />


            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Facebook"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_facebook" />

            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/Instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Instagram"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_instagram" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_youtube_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_bg_disable"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/ic_youtube" />
                <ImageView
                    android:id="@+id/ic_twitter_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/circle_bg_disable"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/ic_twitter" />
                <ImageView
                    android:id="@+id/ic_whatsapp_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/circle_bg_disable"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/ic_whatsapp" />


                <ImageView
                    android:id="@+id/ic_snapshot_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/circle_bg_disable"
                    android:padding="@dimen/_15sdp"
                    android:src="@drawable/ic_snapshot" />
            </LinearLayout>

            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/ic_youtube"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/youtube"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_youtube" />

            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/ic_twitter"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Twitter"
                android:inputType="textWebEmailAddress"
                app:startIcon="@drawable/ic_twitter" />


            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/ic_whatsapp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/whatsapp"

                android:inputType="textWebEmailAddress"
                app:startIcon="@drawable/ic_whatsapp" />


            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/ic_snapshot"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/snapchat"
                android:inputType="textWebEmailAddress"
                app:startIcon="@drawable/ic_snapshot" />


            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/select_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/type_of_employment"
                app:endIcon="@drawable/ic_arrow_down"
                app:startIcon="@drawable/ic_office_building"
                app:viewType="spinner" />


            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/commercial_registration_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/commercial_registration_no"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_office_building" />

            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/expiry_date"
                android:inputType="textPersonName"
                app:startIcon="@drawable/ic_calendar"
                app:viewType="spinner" />
            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/TaxNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/TaxNumber"
                android:inputType="textPersonName"
                app:imeOptions="done"
                app:startIcon="@drawable/ic_tax" />



            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/download_the_commercial_registry_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_btn_ligh"
                android:fontFamily="@font/madani_arabic_medium"
                android:text="@string/download_the_commercial_registry_file"
                android:textAllCaps="false"
                android:textColor="@color/bg"
                android:textSize="@dimen/_12sdp" />

            <com.malka.androidappp.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/locating_the_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/locating_the_company"
                app:endIcon="@drawable/ic_map_content"
                app:startIcon="@drawable/ic_region"
                app:viewType="text" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/business_signup2_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:text="@string/NEXT"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>