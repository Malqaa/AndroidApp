<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="horizontal"
    android:background="@drawable/product_attribute_bg4_orange"
    app:cardCornerRadius="12dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_margin="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:id="@+id/mainContainer">
        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="127dp"
            android:layout_height="144dp"
            android:layout_marginBottom="@dimen/_5sdp"
            >

            <ImageView
                android:id="@+id/ivProductImage"
                android:layout_width="127dp"
                android:layout_height="144dp"
                android:background="@color/gray_light"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tvProductType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/madani_arabic_extra_light"
            android:text="@string/electronics_phones"
            android:textColor="#293241"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/madani_arabic_medium"
            android:text="RealMe 8 Pro Infinite "
            android:textColor="#000000"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>