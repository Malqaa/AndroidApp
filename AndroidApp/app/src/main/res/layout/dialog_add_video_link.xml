<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/corner_background"
    android:orientation="vertical"
    android:paddingBottom="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="@string/video_link"
            android:textColor="@color/orange"
            android:textSize="16sp"
            tools:ignore="MissingPrefix" />

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/close_btn" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@drawable/edittext_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etAddVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:fontFamily="@font/madani_arabic_light"
            android:hint="@string/attach_a_video_link_of_the_item"
            android:inputType="textUri"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/grey"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/complete_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_60sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/madani_arabic_semi_bold"
        android:text="@string/Save"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/_12sdp" />
</LinearLayout>