<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.feedback_frag.FeedbackFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_feedback"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#339933"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/PopupOverlay">

    </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/mFeedbackTabs"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/GoldenApp"
        app:tabIndicatorColor="@color/GoldenApp"
        app:tabGravity="fill"
        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpagerFeedback"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>