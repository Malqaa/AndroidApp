<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/product_attribute_bg4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_42sdp"
            android:background="@color/bg">

            <TextView
                android:id="@+id/tvExpireHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/bg"
                android:fontFamily="@font/madani_arabic_extra_light"
                android:gravity="center"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="@dimen/_104sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/detailpic1" />

                <ProgressBar
                    android:id="@+id/loader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_extra_light"
                    android:text="@string/electronics_phones"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#293241" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text="RealMe 8 Pro Infinite "
                    android:textSize="@dimen/_14sdp"
                    android:textColor="#262626" />

                <TextView
                    android:id="@+id/product_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_light"
                    android:text="@string/Riyadh"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#6D6C74" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvProductPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1643"
                        android:fontFamily="@font/madani_arabic_medium"
                        android:textColor="@color/bg"
                        android:textSize="@dimen/_14sdp"/>


<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="@string/sar"-->
<!--                        android:fontFamily="@font/madani_arabic_medium"-->
<!--                        android:textColor="@color/bg"-->
<!--                        android:layout_marginStart="@dimen/_5sdp"-->
<!--                        android:textSize="@dimen/_14sdp"/>-->


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/light_gray" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:id="@+id/ivImageContainer"
                android:layout_gravity="center_vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/seller_picture"
                        android:layout_width="@dimen/_54sdp"
                        android:layout_height="@dimen/_54sdp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profiledp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/seller_tag"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:background="@drawable/round_btn"
                        android:fontFamily="@font/madani_arabic_semi_bold"
                        android:gravity="center"
                        android:text="@string/seller"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_6sdp" />

                    <ProgressBar
                        android:id="@+id/loader2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/ivImageContainer"
                android:layout_toStartOf="@+id/containerButton"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text=""
                    android:textSize="@dimen/_14sdp"
                    android:textColor="#262626" />
                <TextView
                    android:id="@+id/tvOfferedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_light"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/bg" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_light"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#6D6C74" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:id="@+id/containerButton"
                >

                <TextView
                    android:id="@+id/btnCancel"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:background="@drawable/product_attribute_bg4"
                    android:backgroundTint="@color/bg"
                    android:fontFamily="@font/madani_arabic_semi_bold"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/Cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


                <TextView
                    android:id="@+id/btnPurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_5sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:visibility="gone"
                    android:background="@drawable/product_attribute_bg4"
                    android:backgroundTint="@color/bg"
                    android:fontFamily="@font/madani_arabic_semi_bold"
                    android:gravity="center"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/purchase"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/containerSaleButton"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/btnAccept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:paddingStart="@dimen/_20sdp"
                        android:background="@drawable/product_attribute_bg4"
                        android:backgroundTint="@color/bg"
                        android:fontFamily="@font/madani_arabic_semi_bold"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:text="@string/accept"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                    <TextView
                        android:id="@+id/btnReject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:paddingStart="@dimen/_20sdp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/product_attribute_bg4"
                        android:backgroundTint="#293241"
                        android:fontFamily="@font/madani_arabic_semi_bold"
                        android:gravity="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:paddingEnd="@dimen/_20sdp"
                        android:text="@string/reject"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>