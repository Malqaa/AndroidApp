<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_createpg2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="#339933"
        app:popupTheme="@style/PopupOverlay">

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_createproduct_pg2"
        android:layout_below="@+id/toolbar_createpg2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:text="Photos"
                android:textColor="@color/GreenApp"
                android:textSize="20sp" />


            <Button
                android:id="@+id/btn_uploadphotos"
                android:layout_width="wrap_content"
                android:layout_height="36sp"
                android:layout_below="@+id/textView49"
                android:layout_alignParentStart="true"
                android:layout_marginStart="23dp"
                android:layout_marginTop="20dp"
                android:text="Upload photos"
                android:textColor="@color/white"
                android:textSize="9sp" />


            <EditText
                android:id="@+id/desc_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/btn_uploadphotos"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/buttonradius"
                android:gravity="top"
                android:hint="Description"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <View
                android:id="@+id/view_attribute"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/desc_photo"
                android:layout_marginTop="35dp"
                android:background="@color/SilverBackground" />

            <TextView
                android:id="@+id/attrbute_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_attribute"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                android:text="Attributes"
                android:textColor="@color/GreenApp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/unwanted_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attrbute_title"
                android:layout_marginStart="23dp"
                android:layout_marginTop="30dp"
                android:text="Unwanted Christmas Gift" />

            <RelativeLayout
                android:id="@+id/unwanted_gift_relatv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unwanted_gift"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/buttonradius">

                <Spinner
                    android:id="@+id/unwantgiftspinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/attribute_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/unwanted_gift_relatv"
                android:layout_marginStart="23dp"
                android:layout_marginTop="25dp"
                android:text="Colour" />

            <RelativeLayout
                android:id="@+id/attributr_color_relatv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attribute_color"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/buttonradius">

                <Spinner
                    android:id="@+id/color_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/attribute_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attributr_color_relatv"
                android:layout_marginStart="23dp"
                android:layout_marginTop="25dp"
                android:text="Size" />

            <RelativeLayout
                android:id="@+id/attributr_size_relatv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attribute_size"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/buttonradius">

                <Spinner
                    android:id="@+id/size_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/attribute_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attributr_size_relatv"
                android:layout_marginStart="23dp"
                android:layout_marginTop="25dp"
                android:text="Brand" />

            <RelativeLayout
                android:id="@+id/attributr_brand_relatv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attribute_brand"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/buttonradius">

                <Spinner
                    android:id="@+id/brand_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_createproduct_pg2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/GoldenApp"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="22sp" />


</RelativeLayout>