<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities_main.order.OrderDetailConfirm">

    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_main"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/bill"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please attach a copy of the invoice"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#293241"
            android:textSize="@dimen/_14sdp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:backgroundTint="@color/light_bg"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:padding="@dimen/_5sdp"
            android:text="Attach the picture"
            android:textAllCaps="false"
            android:textColor="@color/bg"
            android:textSize="@dimen/_12sdp" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/shipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_btn"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:padding="@dimen/_5sdp"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>

</RelativeLayout>