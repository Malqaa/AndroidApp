<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".botmnav_fragments.MyProducts.MyProductsFragment">

    <include layout="@layout/toolbar_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/for_sale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="@string/for_sale"
            android:textSize="@dimen/_10sdp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/sold_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@drawable/edittext_bg"
            android:padding="@dimen/_10sdp"
            android:text="@string/sold_out"
            android:textColor="#45495E"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/did_not_Sell"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:background="@drawable/edittext_bg"
            android:padding="@dimen/_10sdp"
            android:text="@string/did_not_sell"
            android:textColor="#45495E"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sold_business_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/product_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/did_not_sale_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/product_item" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sold_out_rcv"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/sold_order_details" />


</LinearLayout>