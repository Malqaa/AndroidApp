<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".botmnav_fragments.Follow_Up.follow_up_fragment">


    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@+id/toolbar_main"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/edittext_bg"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:textSize="@dimen/_12sdp"
        android:weightSum="3">

        <TextView
            android:id="@+id/for_sale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/favorite_categories"
            android:textColor="#45495E"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/sold_out"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/round_btn"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/favorite_sellers"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/did_not_Sell"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:fontFamily="@font/madani_arabic_medium"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/favorite_search"
            android:textColor="#45495E"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

</RelativeLayout>