<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities_main.forgot.ActivityForgotPassOtpcode">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/ic_otp" />

            <TextView
                android:id="@+id/textView2232"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/madani_arabic_bold"
                android:text="Password Reset"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/textView35234"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/madani_arabic_light"
                android:text="@string/we_have_sent_the_activation_code_to_your_phone"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <com.goodiebag.pinview.Pinview
                android:id="@+id/pinview234"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:cursorVisible="false"
                app:forceKeyboard="true"
                app:hint=""
                app:inputType="number"
                app:password="false"
                app:pinBackground="@drawable/edittext_bg"
                app:pinLength="4"
                app:pinWidth="@dimen/_40sdp"
                app:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/redmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="ERROR"
                android:textColor="@color/Red"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView350"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/Ididntreceiveacode"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView3501"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/RESEND"
                android:textAllCaps="true"
                android:textColor="#339933"
                android:textSize="14sp"
                android:visibility="gone" />


            <TextView
                android:id="@+id/countdownTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/madani_arabic_light"
                android:text="@string/resend_the_code_after_50_seconds"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:text="@string/activation"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>
    </ScrollView>

