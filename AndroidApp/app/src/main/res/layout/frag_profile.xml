                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/google_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/GoogleMapIntegration"
                            android:visibility="gone" />

                        <TextView
