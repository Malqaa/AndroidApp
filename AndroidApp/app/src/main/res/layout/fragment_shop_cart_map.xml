<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_shopcartmap"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#339933"
        android:layout_alignParentTop="true"
        app:popupTheme="@style/PopupOverlay">
    </androidx.appcompat.widget.Toolbar>



<fragment
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".botmnav_fragments.shoppingcart4_googlemap.ShopCartMap"
    android:layout_below="@+id/toolbar_shopcartmap"
    android:layout_above="@+id/btn_shopcartmap"/>

    <Button
        android:id="@+id/btn_shopcartmap"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:backgroundTint="@color/GoldenApp"
        android:text="CONFIRM LOCATION"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>