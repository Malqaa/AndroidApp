<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    android:background="@drawable/corner_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/delete_x_rounded" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:includeFontPadding="false"
            android:textColor="@color/orange"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ivClose"
            android:text="@string/addDiscount"
            tools:ignore="MissingPrefix" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/madani_arabic_medium"
                android:includeFontPadding="false"
                android:textColor="@color/textColor2"
                android:textSize="15sp"
                android:text="@string/current_price_buy"
                tools:ignore="MissingPrefix" />
            <TextView
                android:id="@+id/tvCurrnetPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/madani_arabic_medium"
                android:includeFontPadding="false"
                android:textColor="@color/orange"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:text="000"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:background="@drawable/circle_bg">


        <LinearLayout
            android:id="@+id/subtract_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_rigt_corner"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:text="-"
                android:textColor="@color/orange"
                android:textSize="@dimen/_22sdp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/light_gray">

        </LinearLayout>

        <EditText
            android:id="@+id/etPriceDiscound"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:maxLength="3"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/textColor" />


        <LinearLayout
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/light_gray">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_left_corner"
            android:gravity="center"
            tools:ignore="RtlEnabled">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:text="+"
                android:textColor="@color/orange"
                android:textSize="@dimen/_22sdp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/own_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/edittext_bg"
        android:drawablePadding="@dimen/_15sdp"
        android:gravity="center_vertical"
        android:padding="@dimen/_10sdp"
        android:hint="@string/discountEndTime"
        app:drawableStartCompat="@drawable/ic_calendar" />


    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/complete_order_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/madani_arabic_semi_bold"
        android:text="@string/discount"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="@dimen/_12sdp" />


</LinearLayout>