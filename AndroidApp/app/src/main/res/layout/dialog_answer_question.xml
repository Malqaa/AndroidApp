<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="50dp"
    android:background="@drawable/corner_background"
    android:orientation="vertical"
    android:paddingBottom="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corner_background_orange_dark">

            <TextView
                android:id="@+id/tvTitleAr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="10dp"
                android:text="@string/addyourAnswer"
                android:textColor="@color/white"
                android:textSize="17sp"
                tools:ignore="MissingPrefix" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_close_white" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/containerQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivQuestionUser"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/profile2x" />

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:background="@drawable/comment_background"
                    android:fontFamily="@font/madani_arabic_light"
                    android:padding="@dimen/_5sdp"
                    android:text="Is the phone defective?"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <TextView
                android:id="@+id/question_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="22/6/2022"
                android:textColor="@color/grey"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/question_response_yet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_50sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:text="No response yet"
                android:textColor="@color/bg"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/containerMainAskQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_below="@+id/containerQuestion"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/comment_btn">

            <EditText
                android:id="@+id/etWriteQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_13sdp"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/contianerAskQuestion"
                android:layout_weight="1"
                android:background="@null"
                android:fontFamily="@font/madani_arabic_light"
                android:hint="@string/addyourAnswer"
                android:inputType="text"
                android:textColor="#6D6C74"
                android:textSize="@dimen/_13sdp" />


            <LinearLayout
                android:id="@+id/contianerAskQuestion"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/_5sdp"
                android:background="@drawable/circle_ic_background_bg"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="@dimen/_17sdp"
                    android:gravity="center"
                    android:src="@drawable/send_log" />

            </LinearLayout>


        </RelativeLayout>



        <ProgressBar
            android:id="@id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>