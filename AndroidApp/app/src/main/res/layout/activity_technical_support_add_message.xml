<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newPhase.presentation.fragments.accountFragment.technicalSupportActivity.addTechencalSupport.AddTechnicalSupportMessageActivity">


    <include
        android:id="@+id/toolbar_main"
        layout="@layout/toolbar_main" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_bold"
                android:gravity="center"
                android:text="@string/we_are_glad_to_contact_you"
                android:textColor="#262626"
                android:textSize="@dimen/_14sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/madani_arabic_medium"
                android:gravity="center"
                android:text="@string/what_kind_of_help_do_you_need"
                android:textColor="#262626"
                android:layout_marginBottom="20dp"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/containerContactUsType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_toStartOf="@+id/iv_contact_us_type_icon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvContactUsTypeTitle"
                            style="@style/addressCompoEditFieldTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/type_of_communication"
                            android:maxLines="1"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_12sdp"
                            android:padding="10dp"/>

                        <TextView
                            android:id="@+id/tvContactUsType"
                            style="@style/addressCompoEditFieldTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:layout_marginTop="2dp"
                            android:text=""
                            android:visibility="gone"
                            android:textAlignment="viewStart"
                            android:textSize="@dimen/_12sdp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_contact_us_type_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/contacts_us_types_icon" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_error_contact_us"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text="@string/select_type_of_communication"
                    android:textColor="@color/Red"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/itemPhoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_start_icon"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/ic_phone" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="match_parent"
                        android:background="@color/line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/right_session">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tvl_field_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:hint="@string/PhoneNumber"
                                app:boxBackgroundMode="none"
                                app:hintTextColor="@color/hint_color">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPhoneNumber"
                                    style="@style/addressCompoEditFieldTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:importantForAutofill="no"
                                    android:inputType="phone"
                                    android:maxLines="1"
                                    android:paddingTop="@dimen/_5sdp"
                                    android:textAlignment="viewStart"
                                    android:textSize="@dimen/_12sdp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </FrameLayout>

                        <LinearLayout
                            android:id="@+id/right_session"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <com.hbb20.CountryCodePicker
                                android:id="@+id/countryCodePicker"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:ccpDialog_backgroundColor="@color/white"
                                app:ccpDialog_keyboardAutoPopup="false"
                                app:ccpDialog_textColor="@color/text_color"
                                app:ccp_autoFormatNumber="false"
                                app:ccp_contentColor="@color/text_color"
                                app:ccp_defaultNameCode="SA"
                                app:ccp_hintExampleNumber="false"
                                app:ccp_hintExampleNumberFormat="NATIONAL"
                                app:ccp_hintExampleNumberType="MOBILE"
                                app:ccp_rememberLastSelection="false"
                                app:ccp_showNameCode="false"
                                app:ccp_showPhoneCode="true" />
                            <!--
                              app:ccp_autoDetectCountry="true"
                             app:ccp_countryAutoDetectionPref="SIM_NETWORK_LOCALE"-->


                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_phone_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:text=""
                    android:textColor="@color/Red"
                    android:visibility="gone" />

            </LinearLayout>

            <com.malqaa.androidappp.newPhase.utils.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/Email"
                android:inputType="textEmailAddress"
                app:startIcon="@drawable/ic_email" />

            <com.malqaa.androidappp.newPhase.utils.helper.widgets.edittext.TextFieldComponent
                android:id="@+id/problem_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="@string/problem_title" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edittext_bg">

                <EditText
                    android:id="@+id/tvDescriptionAr"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@null"
                    android:fontFamily="@font/madani_arabic_light"
                    android:gravity="top"
                    android:hint="@string/message_details"
                    android:inputType="text|textMultiLine|textCapSentences"
                    android:padding="@dimen/_7sdp"
                    android:scrollbars="vertical"
                    android:textColor="#6D6C74"
                    android:textSize="@dimen/_13sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/round_btn"
                android:fontFamily="@font/madani_arabic_semi_bold"
                android:text="@string/send"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/_14sdp" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>