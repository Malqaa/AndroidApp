<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvTitleAr"
        android:includeFontPadding="false"
        android:fontFamily="@font/madani_arabic_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:text="description"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textAlignment="viewStart"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/type1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toStartOf="@+id/ivSelect"
            android:fontFamily="@font/madani_arabic_light"
            android:textColor="#293241"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_radio_button_unchecked" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/type2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:layout_toStartOf="@+id/ivSelect2"
            android:fontFamily="@font/madani_arabic_light"
            android:textColor="#293241"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/ivSelect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_radio_button_unchecked" />


    </RelativeLayout>
</LinearLayout>