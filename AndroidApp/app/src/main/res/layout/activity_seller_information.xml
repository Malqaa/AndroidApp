<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newPhase.presentation.activities.productsSellerInfoActivity.SellerInformationActivity">

    <include layout="@layout/toolbar_main"
        android:id="@+id/toolbar_main"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_main"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/seller_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text="@string/seller_information"
                    android:textColor="#000000"
                    android:textSize="@dimen/_14sdp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/seller_picture"
                                android:layout_width="@dimen/_54sdp"
                                android:layout_height="@dimen/_54sdp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/profiledp" />


                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_width="@dimen/_48sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_marginTop="@dimen/_50sdp"
                                android:background="@drawable/round_btn"
                                android:fontFamily="@font/madani_arabic_semi_bold"
                                android:text="@string/seller"
                                android:textAllCaps="false"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/_6sdp" />

                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/containerSellerInfoClick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/sellerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/madani_arabic_medium"
                            android:text="Ahmed Mohamed"
                            android:textColor="#000000"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/member_since_Tv"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/madani_arabic_light"
                                android:text="Member since "
                                android:textColor="#000000"
                                android:textSize="@dimen/_12sdp" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/seller_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/madani_arabic_light"
                            android:text="R"
                            android:textColor="#000000"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/seller_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/madani_arabic_light"
                            android:text="+966"
                            android:textColor="@color/bg"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerSellerImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="end"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:background="@drawable/circle_ic_background"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivSellerFollow"
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:gravity="center"
                                android:src="@drawable/notification_log" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/btnMapSeller"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:background="@drawable/circle_ic_background"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="@dimen/_17sdp"
                                android:layout_height="@dimen/_14sdp"
                                android:src="@drawable/map_log" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp">


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_toStartOf="@+id/containerRateSeller"
                        android:scrollbarAlwaysDrawHorizontalTrack="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="10dp">

                            <ImageView
                                android:id="@+id/skype_btn"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_24sdp"
                                android:layout_gravity="center_vertical"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/skype_log" />

                            <ImageView
                                android:id="@+id/youtube_btn"
                                android:layout_width="@dimen/_34sdp"
                                android:layout_height="@dimen/_22sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/youtube_log" />

                            <ImageView
                                android:id="@+id/instagram_btn"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/instagram_log" />

                            <ImageView
                                android:id="@+id/facebook_btn"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/facebook" />

                            <ImageView
                                android:id="@+id/twitter_btn"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/twitter" />

                            <ImageView
                                android:id="@+id/linked_in_btn"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/linkedin" />

                            <ImageView
                                android:id="@+id/snapChat_btn"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/snap_chat" />

                            <ImageView
                                android:id="@+id/tiktok_btn"
                                android:layout_width="@dimen/_23sdp"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:src="@drawable/tiktok" />
                        </LinearLayout>
                    </HorizontalScrollView>


                    <LinearLayout
                        android:id="@+id/containerRateSeller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <LinearLayout
                            android:layout_width="@dimen/_66sdp"
                            android:layout_height="@dimen/_32sdp"
                            android:layout_gravity="end"
                            android:background="@drawable/rate_ic_background"
                            android:gravity="center"
                            android:id="@+id/btnRate"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:orientation="horizontal">

                            <!--                        <TextView-->
                            <!--                            android:id="@+id/tvRateText"-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:layout_gravity="center_vertical"-->
                            <!--                            android:layout_marginEnd="@dimen/_5sdp"-->
                            <!--                            android:fontFamily="@font/madani_arabic_light"-->
                            <!--                            android:gravity="center"-->
                            <!--                            android:text=""-->
                            <!--                            android:textColor="#000000"-->
                            <!--                            android:textSize="@dimen/_14sdp" />-->


                            <ImageView
                                android:id="@+id/ivRateSeller"
                                android:layout_width="@dimen/_18sdp"
                                android:layout_height="@dimen/_18sdp"
                                android:layout_gravity="center"
                                android:src="@drawable/happyface_color" />


                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>
            </LinearLayout>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:id="@+id/sellerProgressBar"/>
        </RelativeLayout>


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_to_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fav_rcv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:listitem="@layout/product_item" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/madani_arabic_medium"
                    android:text="@string/noSpecificationFound"
                    android:textAlignment="viewStart"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone" />

            </RelativeLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>




</RelativeLayout>