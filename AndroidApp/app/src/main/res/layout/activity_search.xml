<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newPhase.presentation.searchActivity.SearchActivity">
    <ImageView
        android:id="@+id/fbButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/ic_baseline_keyboard_backspace_24" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/madani_arabic_semi_bold"
        android:text="@string/want_to_search_for_a_commodity_or_an_auction"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="@dimen/_15sdp"
        />
    <LinearLayout
        android:id="@+id/itemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_bg"
        android:backgroundTint="#F9F9F9"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/ivSearch"
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textAlignment="viewStart"
                android:fontFamily="@font/madani_arabic_medium"
                android:hint="@string/enter_the_name_of_the_product_you_want_to_sell"
                android:maxLines="1"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_10sdp"
                />


            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/search_icon" />


        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/saveSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:visibility="gone"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saveThisSearch"
            android:layout_marginStart="25dp"
            android:textColor="#45495E"
            android:fontFamily="@font/madani_arabic_semi_bold"
            android:textSize="@dimen/_10sdp"
            />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_20sdp"
            android:src="@drawable/notification_log"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp" />


    </LinearLayout>